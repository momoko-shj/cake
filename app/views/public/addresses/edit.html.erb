<div class="containe pt-3">

 <div class="row row-cols-auto ">
  <div class="col-md-5">
   <div class="text-white bg-warning md-5 text-center">
    <h4>配送先編集</h4>
   </div>
  </div>
 </div>
 
 <%= form_with model:@address,method: :patch do |f| %>
 <div class="row pt-4">
  <div class="col-md-3">
   郵便番号（ハイフンなし）
  </div>
  <div class="col-md-4">
   <%= f.text_field :postal_code,class: 'form-control'%>
  </div>
 </div>
 
 <div class ="row pt-4">
  <div class="col-md-3">
   住所
  </div>
  <div class="col-md-7">
   <%= f.text_field :address,class: 'form-control'%>
  </div>
 </div>
 
 <div class ="row pt-4">
  <div class="col-md-3">
   宛名
  </div>
  <div class="col-md-4">
   <%= f.text_field :name,class: 'form-control' %>
  </div>
 </div>
 
 <div class ="row pt-4">
  <div class="col-md-3">
  </div>
  <div class="col-md-4">
   <%= f.submit '変更を保存',class:"btn btn-success btn-block mr-2" %>
  </div>
 </div>
 
 <% end %>
</div>