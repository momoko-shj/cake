<div class="container">
 <div class="row pt-5">
  <div class="col-md-12">
  <div class="col-md-5">
   <div class="text-white bg-warning mb-5 text-center"><h4>注文履歴一覧</h4></div>
  </div>
  
  <div class="row">
  <table class="table table-striped">
    <tr>
      <th class="col-md-1">注文日</th>
      <th class="col-md-4">配送先</th>
      <th class="col-md-3">注文商品</th>
      <th class="col-md-1">支払金額</th>
      <th class="col-md-2">ステータス</th>
      <th class="col-md-1">注文詳細</th>
    </tr>
    
     <% @orders.each do |orders| %>
     <tr>
      <td><%= orders.created_at.strftime('%Y/%m/%d') %></td>
      <td>
       <%= orders.postal_code %><br>
       <%= orders.address %><br>
       <%= orders.name %>
      </td>
      <td>
       <% orders.order_details.each do |order_details| %>
       <%= order_details.item.name %><br>
       <% end %>
      </td>
      <td><%= number_to_currency(orders.total_payment, unit: "¥", format: "%u %n", precision: 0) %></td>
      <td><%= orders.status_i18n %></td>
      <td><%= link_to '表示する',order_path(orders),class:"btn btn-success" %></td> 
     </tr>
     <% end %>
    
  </tabel>
  </div>
  
  </div>  
 </div>
</div>

