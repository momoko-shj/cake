<div class="container pt-3">
 <div class="row">
  <div class="col-md-12">
  
   <div class="row">
    <div class="col-md-4">
     <div class="text-white bg-info text-center">
     <h4>会員一覧</h4>
     </div>
    </div>
   </div>
   
   <div class ="row pt-3">
    <div class="col-md-2">
     会員ID
    </div>
    <div class="col-md-3">
     氏名
    </div>
    <div class="col-md-4">
     メールアドレス
    </div>
    <div class="col-md-2">
     ステータス
    </div>
   </div>
   
   <div class ="row pt-3">
    <% @customers.each do |customer| %>
    <div class="col-md-2">
     <%= customer.id %>
    </div>
    <div class="col-md-3">
     <%= link_to customer.last_name + customer.first_name,admin_customer_path(customer) %>
    </div>
    <div class="col-md-4">
     <%= customer.email %>
    </div>
    <div class="col-md-2">
     <%= customer.is_deleted ? '退会':'有効' %>
    </div>
     <% end %>
   </div>
   
   <div class ="row pt-3">
    <div class ="col-md-7 offset-5">
     <%= paginate @customers %>
    </div>
   </div>
   
  </div>
 </div>
</div>