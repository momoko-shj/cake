<div class="container pt-3">
 <div class="row">
  <div class="col-md-12">
   
   <div class="row">
    <div class="col-md-5">
     <div class="text-white bg-info text-center">
      <h4>
       <%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細
      </h4>
     </div>
    </div>
   </div>
   
   <div class ="row pt-4">
    <div class ="col-md-2">
     会員ID
    </div>
    <div class ="col-md-8">
     <%= @customer.id %>
    </div>
   </div>
   
   <div class ="row pt-4">
    <div class ="col-md-2">
     氏名
    </div>
    <div class ="col-md-8">
     <%= @customer.last_name %>  <%= @customer.first_name %>
    </div>
   </div>
   
   <div class ="row pt-4">
    <div class ="col-md-2">
     フリガナ
    </div>
    <div class ="col-md-8">
     <%= @customer.last_name_kana %>  
     <%= @customer.first_name_kana %>
    </div>
   </div>
   
   <div class ="row pt-4">
    <div class ="col-md-2">
     郵便番号
    </div>
    <div class ="col-md-8">
     <%= @customer.postal_code %>
    </div>
   </div>
   
   <div class ="row pt-4">
    <div class ="col-md-2">
     住所
    </div>
    <div class ="col-md-8">
     <%= @customer.address %>
    </div>
   </div>
   
   <div class ="row pt-4">
    <div class ="col-md-2">
     電話番号
    </div>
    <div class ="col-md-8">
     <%= @customer.telephone_number %>
    </div>
   </div>
   
   <div class ="row pt-4">
    <div class ="col-md-2">
     メールアドレス
    </div>
    <div class ="col-md-8">
     <%= @customer.email %>
    </div>
   </div>
   
   <div class ="row pt-4">
    <div class ="col-md-2">
     会員ステータス
    </div>
    <div class ="col-md-8">
     <%= @customer.is_deleted ? '退会':'有効' %>
    </div>
   </div>
   
   <div class ="row pt-4">
    <div class = "col-md-4">
     <%= link_to '編集する',edit_admin_customer_path(@customer),class:"btn btn-success offset-md-3" %>
    </div>
    <div class = "col-md-4">
     <%= link_to '注文履歴一覧を見る',admin_orders_path(customer_id: @customer.id),class:"btn btn-success" %>
    </div>
   </div>
   
  </div>
 </div>
</div>


