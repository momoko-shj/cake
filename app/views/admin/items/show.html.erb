<div class="container pt-3">
 <div class="row">
  <div class="col-md-12">
  
   <div class ="row">  
    <div class="col-md-4">
     <div class="text-white bg-info text-center mb-5">
      <h4>商品詳細</h4>
     </div>
    </div>
   </div>
   
   <div class="row">
     
    <div class="col-md-4">
     <%= image_tag @item.get_image(300,300),class:"offset-md-1 show-img" %>
    </div>
    
    <div class="col-md-8">
     
     <div class = "row pt-3">
      <div class ="col-md-3">
       商品名
      </div>
      <div class ="col-md-5">
       <%= @item.name %>
      </div>
     </div>
     
     <div class = "row pt-3">
      <div class ="col-md-3">
       商品説明
      </div>
      <div class ="col-md-5">
       <%= @item.introduction %>
      </div>
     </div>
     
     <div class = "row pt-3">
     <div class ="col-md-3">
      ジャンル
     </div>
     <div class ="col-md-5">
      <%= @item.genre.name %>
     </div>
     </div>
     
     <div class = "row pt-3">
      <div class ="col-md-3">
        税込価格
       <br>
        (税抜価格)
      </div>
      <div class ="col-md-5">
        <%= number_to_currency(@item.price*1.1, unit: "¥", format: "%u %n", precision: 0) %>
       <br>
       （<%= number_to_currency(@item.price, unit: "¥", format: "%u %n", precision: 0) %>）
      </div>
     </div>
     
     <div class = "row pt-3">
      <div class ="col-md-3">
       販売ステータス
      </div>
      <div class ="col-md-5">
       <%= @item.is_active ? '販売中':'販売停止中' %>
      </div>
     </div>
     
     <div class = "row pt-3">
      <div class ="col-md-2">
       <%= link_to '編集する',edit_admin_item_path(@item),class:"btn btn-success" %>
      </div>
      <div class ="col-md-2">
       <%= link_to '削除する',admin_item_path(@item),method: :delete, class:"btn btn-danger" %>
      </div>
     </div>
     
    </div>
    
   </div>
   
  </div>
 </div>
</div>