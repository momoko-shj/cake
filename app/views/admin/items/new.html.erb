<div class="container pt-3">
 <div class="row">
  <div class="col-md-12">
  
   <div class ="row">  
    <div class="col-md-5">
     <div class="text-white bg-info text-center mb-5">
      <h4>商品新規登録</h4>
     </div>
    </div>
   </div>
   
   <%= form_with model: @item, url: admin_items_path do |f| %>
   <div class="row pt-3">
    <div class="col-md-3">
     商品画像
    </div>
    <div class="col-md-9">
     <%= f.file_field :image, accept: "image/*", class:"form-control-file user-image" %>
    </div>
   </div>
   
   <div class="row pt-3">
    <div class="col-md-3">
     商品名
    </div>
    <div class="col-md-9">
     <%= f.text_field :name,autoforcus:true,id:"inputName",placeholder:@item.name,class:"form-control name mt-3" %>
    </div>
   </div>
   
   <div class="row pt-3">
    <div class="col-md-3">
     商品説明
    </div>
    <div class="col-md-9">
     <%= f.text_area :introduction,class:"form-control name mt-3" %>
    </div>
   </div>
   
   <div class="row pt-3">
    <div class="col-md-3">
     ジャンル
    </div>
    <div class="col-md-9">
     <%=  f.select :genre_id, options_from_collection_for_select( Genre.all, :id, :name) %>
    </div>
   </div>
   
   <div class="row pt-3">
    <div class="col-md-3">
     税抜価格
    </div>
    <div class="col-md-9">
     <%= f.text_field :price,class:"select-group mt-3" %>円
    </div>
   </div>
   
   <div class="row pt-3">
    <div class="col-md-3">
     販売ステータス
    </div>
    <div class="col-md-9">
     <%= f.radio_button :is_active, :true, class:"col-md-2 mt-3" %>販売中
     <%= f.radio_button :is_active, :false,class:"col-md-2 mt-3" %>販売停止中
    </div>
   </div>
   
   <div class="row pt-3">
    <div class="col-md-9 offset-3">
     <%= f.submit "新規登録",class:"btn btn-success " %>
    </div>
    <% end %>
   </div>
   
  </div>  
 </div>
</div>