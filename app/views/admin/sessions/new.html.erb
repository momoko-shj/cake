<div class="container">
<div class="row">
<div class="col-md-12">
  
<div class ="row">  
  <div class="col-md-5">
   <div class="text-white bg-info text-center mb-3">
   <h2>管理者ログイン</h2>
   </div>
  </div>
</div>

<div class="row">
<div class="col-md-11 offset-1">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field col-md-9">
      <%= f.label :"メールアドレス",class:"col-md-3" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"col-md-6" %>
    </div>
  
    <div class="field col-md-9">
      <%= f.label :"パスワード",class:"col-md-3" %>
      <%= f.password_field :password, autocomplete: "current-password",class:"col-md-6" %>
    </div>
  
   <div class="field col-md-9">
    <% if devise_mapping.rememberable? %>
      <!--<div class="field col-md-9 offset-2">-->
        <%= f.check_box :remember_me,class:"col-md-1" %>
        <%= f.label :remember_me,class:"col-md-3" %>
    <% end %>
   </div>
  
    <div class="actions class col-md-9">
      <%= f.submit "ログイン",class:"btn btn-sm btn-success col-md-3 offset-3" %>
    </div>
  <% end %>
  <%= render "admin/shared/links" %>
</div>
</div>
</div>
</div>
</div>
</div>

