<div class="container pt-3">
 <div class="row">
  <div class="col-md-12">
 
   <div class ="row">  
    <div class="col-md-5">
     <div class="text-white bg-info text-center mb-5">
      <h4>ジャンル一覧・追加</h4>
     </div>
    </div>
   </div>
   
   <%= form_with model:@genre,url:admin_genres_path do |f| %>
   <div class ="row">
    <div class="col-md-2">
     ジャンル名
    </div>
    <div class="col-md-3">
     <%= f.text_field :name %>
    </div>
    <div class="col-md-3">
     <%= f.submit '新規登録',class:"btn btn-success" %>
    </div>
   </div>
   <% end %>
   
   <div class = "row pt-4 pt-5">
    <div class ="col-md-3 border-bottom">
     ジャンル
    </div>
    <div class ="col-md-3 border-bottom">
    </div>
   </div>
   
   <% @genres.each do |genre| %>
   <div class = "row pt-3">
    <div class ="col-md-3">
     <%= genre.name %>
    </div>
    <div class ="col-md-3">
     <%= link_to"編集する",edit_admin_genre_path(genre),class:"btn btn-success" %>
     <%= link_to"削除する",admin_genre_path(genre),method: :delete,class:"btn btn-danger" %>
    </div>
   </div>
   <% end %>
   
  </div>
 </div>
</div>